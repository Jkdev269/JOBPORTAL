      <!-- Dynamic Job Listings -->
      <div class="cardflex row mt-5">
        <% jobs.forEach(function(job) { %>
          <div class="card col-md-4 p-3 bg-them border-white">
            <div class="card-header text-white">Actively hiring</div>
            <div class="card-body">
              <h5 class="card-title text-warning"><%= job.companyName %></h5>
              <span class="text-white"><%= job.category %></span>
              <span class="text-info"><%= job.designation %></span>
              <h5 class="card-title text-white mt-3"><%= job.location %></h5>
              <h5 class="card-title text-white">₹ <%= job.salary %></h5>
              <div class="skill p-1">
                <% job.skills.forEach(function(skill) { %>
                  <button class="btn btn-sm btn-outline-info"><%= skill %></button>
                <% }) %>
              </div>
              <a href="/job/<%= job._id %>" class="btn btn-sm btn-outline-success my-2">View details</a>
            </div>
          </div>
        <% }); %>
      </div>
